{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "lib": ["ES2015", "DOM"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "editorOptions": {
        "indent": "spaces",
        "tabSize": 2,
        "insertSpaces": true
    },
    "baseUrl": ".",
    "paths": {
        "@zcodeapp/*": ["src"]
    }
}