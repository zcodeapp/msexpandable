{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES5",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ES2015", "DOM"]
    },
    "editorOptions": {
        "indent": "spaces",
        "tabSize": 2,
        "insertSpaces": true
    },
    "baseUrl": ".",
    "paths": {
        "@zcodeapp/*": ["src"]
    }
}