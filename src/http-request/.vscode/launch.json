{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "HTTP Request Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "docker",
      "localRoot": "${workspaceFolder}",
      "attachSimplePort": 9229,
      "remoteRoot": "/app/src/http-request",
      "runtimeArgs": [
        "compose", "-f", "../../docker-compose.yml",
        "run", "--rm",
        "--workdir", "/app/src/http-request",
        "--publish", "9229:9229",
        "test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}