{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Di Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "docker",
      "localRoot": "${workspaceFolder}",
      "attachSimplePort": 9229,
      "remoteRoot": "/app/src/di",
      "runtimeArgs": [
        "compose", "-f", "../../docker-compose.yml",
        "run", "--rm",
        "--workdir", "/app/src/di",
        "--publish", "9229:9229",
        "test"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}
